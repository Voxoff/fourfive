
<div class="container">
  <div class="tag-line">
    <h3>Specialised cbd products to help you rest, recover and rise</h3>
  </div>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-xs-12 col-md-4">
        <div class="product-card">
          <div class="image-background">
            <%= image_tag product.photo_url, width: "264px", height: "400px" %>
          </div>
          <div class="product-info">
            <h2><%= product.name %></h2>
            <div class="btn btn-primary btn-lg">
              Buy now
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="info-line">
    <h3>friends from the world of sport share their stories</h3>
    <h5>we asked our community to share their experiences of cbd</h5>
  </div>

  <div class="review-section">
    <% @reviews.each do |review| %>
      <div class="review-card">
        <%= cl_image_tag review.photo, class: "review-image-gap" if review.photo.present? %>
        <div class="review-text">
          <h4><%= review.content %></h4>
          <p><%= review.name %></p>
          <p><%= review.position %></p>
        </div>
      </div>
      <div class="thin-grey-line"></div>
    <% end %>
  </div>
</div>

<div class="our-story">
  <h2>Our story</h2>
</div>













