<div class="container">
  <div class="border-bottom" style="border: none !important">
    <h3 style="font-weight: bolder; text-align: center;">Our products</h3>
    <h5 class="lighter" style="text-align: center;">Choose from our range of specialist oils, balms and capsules.</h5>
  </div>

  <div class="row shorter-row">
    <% @product_groups.each do |group| %>
      <div class="col-xs-12 col-sm-12 col-md-4">
        <div class="product-card">
          <div class="image-background">
            <%= link_to product_path(group.products.first.name) do %>
            <% end %>
            <%= cl_image_tag group.photo, alt: group.products.first.readable_name, class: "default-photo", transformation: { quality: "auto:best",  width: 225, height: 300, crop: :scale, fetch_format: :auto } if group.photo_url %>
            <%= image_tag group.interactive_photo_slug, alt: "Interactive", width: 225, height: 300, crop: :scale, quality: :auto, fetch_format: :auto, class: "interactive-photo" %>
          </div>
          <div class="product-info">
              <%= link_to product_path(group.products.first.name), class: "yellow-hover" do %>
                <h2><%= group.readable_name %></h2>
              <% end %>
              <p class="lighter" style="font-size: 10px; margin-top: 0px;">
                <%= group.subtitle %>
              </p>
            <%= link_to "shop now", product_path(group.products.first.name), class: "simple-btn bold"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
