
  <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="8000">
  <!-- Indicators -->
  <ol class="carousel-indicators" style="bottom: 5px;">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag "carousel-range.jpg", class: "hidden-xs" %>
      <%= image_tag 'carousel-square-range.jpg', class: "visible-xs-block"  %>
      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <%= image_tag "carousel-shipping.jpg", class: "hidden-xs" %>
      <%= image_tag 'carousel-square-lifestyle.jpg', class: "visible-xs-block"  %>

      <div class="carousel-caption">
      </div>
    </div>
    <div class="item">
      <%= image_tag "carousel-capsule.jpg", class: "hidden-xs" %>
      <%= image_tag 'carousel-square-shipping.jpg', class: "visible-xs-block"  %>

      <div class="carousel-caption">
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev" style="background-image:none;">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next" style="background-image:none;">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container">
  <div class="border-bottom" style="border: none !important">
    <h3 style="font-weight: bolder; text-align: center;">Our products</h3>
    <h5 class="lighter" style="text-align: center;">Choose from our range of specialist oils, balms and capsules.</h5>
  </div>

  <div class="row shorter-row">
    <% @product_groups.each do |group| %>
      <div class="col-xs-12 col-sm-12 col-md-4">
        <div class="product-card">
          <div class="image-background">
            <%= link_to product_path(group.products.first.name) do %>
              <%= cl_image_tag group.photo_url, width: "264px", height: "400px" if group.photo_url %>
            <% end %>
          </div>
          <div class="product-info">
              <%= link_to product_path(group.products.first.name), class: "yellow-hover" do %>
                <h2><%= group.readable_name %></h2>
              <% end %>
              <p class="lighter" style="font-size: 10px; margin-top: 0px;">
                <%= group.subtitle %>
              </p>
            <%= link_to "shop now", product_path(group.products.first.name), class: "simple-btn"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="thin-grey-line wider"></div>

  <div class="info-line">
    <h3>Your stories</h3>
    <h5>We asked you to share your cbd experiences.</h5>
  </div>

  <div class="row">
    <div class="col-xs-offset-1 col-xs-10">
      <div class="review-section">
        <div class="review-column">
          <% @reviews.each_with_index do |review, i| %>
            <div class="review-card" id=<%= "cancel-border" if i == 2 %>>
              <div class="review-content">
                <div class="review-image">
                  <%= cl_image_tag review.photo, class: "review-image" if review.photo.present? %>
                </div>
                <div class="review-text" data-toggle="collapse" data-target="#collapseExample<%= i %>" role="button" aria-expanded="false" aria-controls="collapseExample<%= i %>">
                  <h4><%= review.content %></h4>
                  <h5><%= review.name %></h5 style="margin-bottom: 3px;">
                  <p><%= review.position %></p>
                </div>
              </div>
              <div class="collapse" id="collapseExample<%= i %>">
                <div class="review-more-info">
                  <p><%= review.desc %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="thin-grey-line wider"></div>

  <div class="our-story" style="margin-bottom: 15px;">
    <h2>Our Story</h2>
    <h5>Our cbd experience.</h5>
  </div>
  <div class="ajflex">
    <%= image_tag "cartoon.jpg", height: 500, class: "homepage-cartoon" %>
  </div>
  <div class="stripes" style="height: 45px;">
    <div class="yellow-thin-stripe" id="over-image" style="width: 100vw; position: absolute; left: 50%; transform: translate(-50%, 0%);"></div>
    <div class="yellow-thin-stripe" id="over-image" style="width: 100vw; top: 25px; position: absolute; left: 50%; transform: translate(-50%, 0%);"></div>
  </div>

  <div class="info-line">
    <p> We use cbd as part of our daily routine in our rugby careers. It helps us maintain a healthy lifestyle throughout the highs and lows of professional sport.
 </p>
    <p>Now we want to spread the word about the benefits of cbd, and as founders of <span class="bold">fourfive</span>, we are committed to offering the highest grade cbd products available, specifically designed to help you maintain an active lifestyle.
 </p>
    <p id="founder">George Kruis & Dom Day</p>
    <div class="fat-yellow-stripe" style="margin-bottom: 45px"></div>
    <%= link_to "Find out more", about_path, class: "simple-btn", style: "margin-top: 25px;" %>
  </div>
</div>

<div class="graphics" id="graphics">
  <h4 id="for-the-active">The cbd brand helping you maintain an active lifestyle</h4>
    <div class="container">
    <div class="graphic-icons">
      <div class="card-graphics">
        <i class="fas fa-star fa-lg"></i>
        <div class="how-it-works-text">
          <p>Products to help you maintain an active lifestyle</p>
        </div>
      </div>
      <div class="card-graphics">
        <i class="fa fa-heart fa-lg"></i>
        <div class="how-it-works-text">
          <p>High-grade 100% natural cbd products</p>
        </div>
      </div>
      <div class="card-graphics">
        <i class="fa fa-truck"></i>
        <div class="how-it-works-text">
          <p>Free UK delivery on all products</p>
        </div>
      </div>
    </div>
  </div>
</div>

<%= content_for :after_js do %>
<script type="text/javascript">
  function boldString(str, find){
      var re = new RegExp(find, 'g');
      return str.replace(re, '<b>'+find+'</b>');
  }
  let strings = document.querySelectorAll('.review-more-info')
  strings.forEach((i) => {
    res = boldString(i.innerHTML, "fourfive")
    i.innerHTML = res
  })
</script>

<% end %>

