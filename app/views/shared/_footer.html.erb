      <div class="disclaimer">
        All products contain less than 0.20% THC
      </div>
      <div class="copyright">
        <p><span style="font-weight:bolder">fourfive</span> cbd All Rights Reserved <i class="far fa-copyright"></i></p> <!-- far for FontA 5-->
      </div>
    </div>
  </div>
  <div class="logos">
    <div class="payment-logos">
      <%= image_tag "visa.png", crop: :scale, quality: :auto, fetch_format: :auto, height: 70, flags: "lossy" %>
      <%= image_tag "mastercard.png", crop: :scale, quality: :auto, fetch_format: :auto, height: 50, flags: "lossy" %>
    </div>
    <%= image_tag "cta.png", id: "cta", crop: :scale, quality: :auto, fetch_format: :auto, height: 50, flags: "lossy" %>
  </div>
</div>

