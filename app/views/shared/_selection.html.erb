<div class="selection">
  <p style="font-weight:lighter">Select your <%= string == "tincture" ? "flavour" : "strength" %></p>
  <div class="field">
    <div id=<%= string %> class="ajflex"><p><%= selections.first %></p></div>
    <i class="fas fa-caret-down"></i>
  </div>
  <div class="drop-down" style="display: none;">
    <% selections.each do |selection| %>
      <div class="drop-down-item"><p><%= selection %></p></div>
    <% end %>
  </div>
</div>
