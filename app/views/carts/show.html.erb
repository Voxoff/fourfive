<!-- Styled form -->
<div class="container">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-10">
      <h3 class="basket-header">Your <span class="bold">fourfive</span> basket</h3>
      <div class="table">
        <div class="thead">
          <div class="tr">
            <div class="th"></div>
            <div class="th">Quantity</div>
            <div class="th">Total</div>
          </div>
        </div>
        <div class="tbody">
          <% @cart_items.each do |item| %>
            <div class="tr">
              <div class="td">
                <div class="cart-item-details">
                  <h1><%= item.product.specific_name %></h1>
                  <p>£<%= item.product.price %></p>
                </div>
              </div>
              <div class="td">
                <div class="cart-item-quantity">
                  <%= button_to cart_item_path(item), method: :patch, params: {quantity: -1, cart_id: @cart.id, product_id: item.product.id} do %>
                    <span>-</span>
                  <% end %>
                  <span><%= item.quantity %></span>
                  <%= button_to cart_item_path(item), method: :patch, params: {quantity: 1, cart_id: @cart.id, product_id: item.product.id} do %>
                    <span>+</span>
                  <% end %>
                </div>
              </div>
              <div class="td">
                <div class="cart-item-cost">
                  £<%= item.line_cost %>
                </div>
              </div>
              <div class="td">
                <div class="delete">
                  <%= link_to "", cart_item_path(item), method: :delete, class: "fas fa-times-circle"%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="tfoot">
          <div class="tr">
            <div class="td foot-label">Total:</div>
            <div class="td foot-quantity"><%= @cart.quantity %></div>
            <div class="td foot-amount">£<%= @cart.amount %></div>
          </div>
        </div>
      </div>
      <div class="cart-actions">
        <div class="cart-actions-left">
          <%= link_to "continue shopping", root_path, class: "simple-btn cart-button-margin"%>
        </div>
        <div class="cart-actions-right">
          <%= link_to "checkout", new_cart_payment_path(@cart), style: "color: white; background-color: rgb(40,40,40)", class: "simple-btn no-hover cart-button-margin" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-5 col-sm-6">
      <div class="qualifier">If you are not satisfied with your purchase you may return it for a refund within 30 days of purchase. Please use the following links to read our <%= link_to "privacy policy", privacy_policy_path %> and <%= link_to "terms and conditions", privacy_policy_path %>.</div>
    </div>
  </div>
</div>
