<!-- Styled form -->
<div class="container">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-10">
      <h3 class="basket-header">your <span class="bold">fourfive</span> basket</h3>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th>Product</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |item| %>
            <tr>
              <td class="yellow-box"></td>
              <td class="align-center"><%= item.product.name %></td>
              <% if item.product.name == "cbd oils" %>
                <td class="align-right">29.99 - 119.99</td>
              <% elsif item.product.name == "cbd balms" %>
                <td class="align-right">29.99 - 59.99</td>
              <% else %>
                <td class="align-right"><%= item.product.price if item.product.name == "cbd capsules" %></td>
              <% end %>
              <td class="align-right">
                <%= button_to cart_items_path, params: {quantity: 1, cart_id: @cart.id, product_id: item.product.id} do %>
                  <i class="fas fa-plus"></i>
                <% end %>
                <%= item.quantity %>
                <%= button_to cart_items_path, params: {quantity: -1, cart_id: @cart.id, product_id: item.product.id} do %>
                  <i class="fas fa-minus"></i>
                <% end %>
              </td>
              <td class="align-right"><%= item.line_cost %></td>
              <td class="delete"><%= link_to "", cart_item_path(item), method: :delete, class: "fas fa-times-circle"%></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td class="ft-border-bold">Total</td>
            <td class="ft-border-bold"><%= @cart.quantity %></td>
            <td class="ft-border-bold"><%= @cart.amount %></td>
          </tr>
        </tfoot>
      </table>
      <div class="cart-actions">
        <div class="cart-actions-left">
          <%= link_to "continue shopping", :back, class: "simple-btn cart-button-margin"%>
        </div>
        <div class="cart-actions-right">
          <%= link_to "update basket", request.original_url, class: "simple-btn cart-button-margin"%>
          <%= link_to "checkout", new_cart_payment_path(@cart), class: "simple-btn cart-button-margin" %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 col-sm-offset-5 col-sm-6">
      <div class="qualifier">If you are not satisfied with your purchase you may return it for a refund within one year of purchase. Please use the following links to read our <%= link_to "privacy policy", privacy_policy_path %> and <%= link_to "terms and conditions", "#" %>.</div>
    </div>
  </div>
</div>
